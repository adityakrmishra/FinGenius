# Application Configuration
APP_ENV=development
# Possible values: development, testing, production

# API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
COINGECKO_API_KEY=your_coingecko_key_here

# Logging Configuration
LOG_LEVEL=INFO
# Possible values: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Data Pipeline Settings
DATA_REFRESH_INTERVAL_HOURS=24
MAX_HISTORICAL_DAYS=3650  # ~10 years

# Reinforcement Learning
RL_TRAINING_MODE=True
RL_MODEL_SAVE_PATH=./data/models/rl_model

# Web Server Configuration
PORT=5000
SECRET_KEY=your_secret_key_here
DEBUG_MODE=True

# Simulation Parameters
MONTE_CARLO_SIMULATIONS=1000
RISK_FREE_RATE=0.05  # Annualized 5%

# Data Storage
DATA_CACHE_PATH=./data/cache
